{
  "compileOnSave": true,
  "compilerOptions": {
    "outFile": "./dist/scrub.js",
    "baseUrl": ".",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "removeComments": true,
    "downlevelIteration": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "none"
  },
  "include": ["src/**/*"]
}
